<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/adminUsernameEditText"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:enabled="false"
        android:hint="@string/adminUsernameEditTextHint"
        android:inputType="text"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/adminToggleAdminButton"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/adminToggleAdminButton"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:enabled="false"
        android:text="@string/adminToggleAdminButtonText"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/adminClearDatabaseButton"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:enabled="false"
        android:text="@string/adminClearDatabaseButtonText"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>