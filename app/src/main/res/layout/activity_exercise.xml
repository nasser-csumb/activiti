<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/exerciseTopMenu"
        layout="@layout/top_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cardioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardio"
        app:layout_constraintTop_toBottomOf="@id/exerciseTopMenu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp" />

    <Button
        android:id="@+id/weightLiftingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Lifting"
        app:layout_constraintTop_toBottomOf="@id/cardioButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/progressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress"
        app:layout_constraintTop_toBottomOf="@id/weightLiftingButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
